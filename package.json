{
  "name": "maxloh.github.io",
  "version": "2.0.0",
  "description": "Copyright &copy; 2019 Loh Ka Hong. All rights reserved.",
  "dependencies": {
    "bootstrap": "^4.3.1",
    "intersection-observer": "^0.7.0",
    "photoswipe": "^4.1.3",
    "remarkable": "^1.7.1"
  },
  "devDependencies": {
    "inline-assets": "^1.4.3",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.20.3",
    "webpack": "^4.35.2",
    "webpack-cli": "^3.3.5"
  },
  "scripts": {
    "build": "npm run css-compile && npm run js-compile",
    "css-compile": "npx inline-assets .\\node_modules\\photoswipe\\dist\\default-skin\\default-skin.css .\\assets\\css\\default-skin.css && npx sass .\\assets\\dev\\scss\\style.scss:.\\assets\\css\\style.css --style=compressed --source-map && del .\\assets\\css\\default-skin.css",
    "js-compile": "webpack",
    "watch": "npx npm-run-all --parallel watch-*",
    "watch-css": "npx nodemon --watch assets/dev/scss/ --ext scss --exec \"npm run css-compile\"",
    "watch-js": "npx nodemon --watch assets/dev/js/ --ext js --exec \"npm run js-compile\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxloh/maxloh.github.io.git"
  },
  "author": "Loh Ka Hong",
  "license": "UNLICENSED",
  "private": true,
  "homepage": "https://github.com/maxloh/maxloh.github.io#readme"
}
