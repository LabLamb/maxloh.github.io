{
  "name": "maxloh.github.io",
  "version": "2.0.0",
  "description": "Copyright &copy; 2019 Loh Ka Hong. All rights reserved.",
  "dependencies": {
    "@material/fab": "^3.2.0",
    "bootstrap": "^4.3.1",
    "intersection-observer": "^0.7.0",
    "photoswipe": "^4.1.3",
    "remarkable": "^1.7.1",
    "smooth-scroll": "^16.1.0"
  },
  "devDependencies": {
    "inline-assets": "^1.4.3",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.6"
  },
  "scripts": {
    "build": "npm run css-inline-assets && npm run css-compile && npm run js-compile",
    "css-inline-assets": "npx inline-assets node_modules/photoswipe/dist/default-skin/default-skin.css assets/dev/scss/default-skin.css",
    "css-compile": "npx node-sass assets/dev/scss/style.scss assets/css/style.css --output-style compressed --source-map true --include-path node_modules/",
    "js-compile": "export NODE_ENV=production && webpack",
    "watch": "npx npm-run-all --parallel watch-*",
    "watch-css": "npm run css-compile -- --watch",
    "watch-js": "export NODE_ENV=development && webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxloh/maxloh.github.io.git"
  },
  "author": "Loh Ka Hong",
  "license": "UNLICENSED",
  "private": true,
  "homepage": "https://github.com/maxloh/maxloh.github.io#readme"
}
